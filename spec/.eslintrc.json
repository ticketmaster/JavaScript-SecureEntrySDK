{
    "env": {
        "browser": true,
        "mocha": true
    },
    "extends": "standard",
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-unused-expressions": "off",
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "asyncArrow": "always",
            "named": "never"
        }]
    }
}
